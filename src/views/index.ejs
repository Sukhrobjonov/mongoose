<%- include('parts/nav') %>
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/index.css" />
        <title>Olx.uz</title>
    </head>
    <body>
        <section class="main-section">
            <div class="container">
                <h1 class="title">Главные категории</h1>
                <div class="categories">
                    <% for(category of categories) {%>
                    <div class="category-wrapper">
                        <div class="category-item flet">
                            <a
                                href="/category/<%= category._id %> "
                                class="link parent category-link"
                            >
                                <span class="category-name"
                                    ><%= category.name %></span
                                >

                                <img
                                    class="
                                        category-image
                                        cat-icon
                                        cat-icon-circle
                                        cat-icon-
                                        cat-cmt-icon-
                                    "
                                    src="/img/<%= category.photos %> "
                                    alt=""
                                />

                                <!-- <span
                                    id="image"
                                    class="
                                        cat-icon
                                        cat-icon-circle
                                        cat-icon-
                                        cat-cmt-icon-
                                    "
                                    style="background-color: rgb(255, 206, 50)"
                                ></span> -->
                            </a>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </section>
    </body>
</html>
<%- include('parts/footer') %>
